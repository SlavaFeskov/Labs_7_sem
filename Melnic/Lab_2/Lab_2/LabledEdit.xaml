<UserControl x:Class="Lab_2.LabledEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_2"
             mc:Ignorable="d" 
             d:DesignHeight="NaN" d:DesignWidth="NaN"
             Padding="5,5,5,5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="{Binding ShowingName}" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="23"  Padding="0,2,0,0" RenderTransformOrigin="1.75,0.522" />
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" x:Name="TextBox" TextWrapping="Wrap" Text="{Binding ContentText}" VerticalAlignment="Top" Width="70" Padding="4,2,0,0"/>
    </Grid>
</UserControl>
